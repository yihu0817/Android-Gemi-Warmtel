<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.near.NearFragment">

    <com.warmtel.gemi.ui.common.TitleBarView
        android:id="@+id/title_bar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:left_bar_icon="@drawable/near_logo" />

    <com.warmtel.expandtab.ExpandPopTabView
        android:id="@+id/near_expandpoptabview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_view"
        app:tab_toggle_btn_bg="@drawable/near_expoptab_selector"
        app:tab_toggle_btn_font_color="@android:color/background_dark" />

    <ListView
        android:id="@+id/merchant_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/near_expandpoptabview" />
</RelativeLayout>
